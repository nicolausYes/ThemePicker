<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/preview_background"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@color/default_theme_preview_background">

            <TextView
                android:id="@+id/preview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_big"
                android:layout_marginLeft="@dimen/spacing_big"
                android:layout_centerVertical="true"
                android:textSize="@dimen/theme_preview_text_size"
                android:textColor="@color/default_theme_preview_text"
                android:text="@string/default_theme_preview"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/button_change_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Change color"/>
    </LinearLayout>


</RelativeLayout>

