<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.nicolausyes.colorpickerview.view.ColorPickerView
        android:id="@+id/colorpickerview"
        android:layout_width="@dimen/colorpicker_width"
        android:layout_height="@dimen/colorpicker_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_normal"
        app:huePanelWidth="@dimen/spacing_big"
        app:huePanelSpacing="@dimen/spacing_double"
        app:borderColor="@android:color/transparent"
        />

</RelativeLayout>